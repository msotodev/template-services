<?xml version="1.0" encoding="utf-8" ?>
<page:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			   xmlns:page="clr-namespace:MauiTestApp.Pages"
			   xmlns:viewmodels="clr-namespace:TemplateServices.Core.ViewModels;assembly=TemplateServices.Core"
			   x:Class="MauiTestApp.Pages.PermissionPage"
			   x:DataType="viewmodels:PermissionPageViewModel"
			   x:TypeArguments="viewmodels:PermissionPageViewModel"
			   Title="Permission">
	
	<Grid Style="{StaticResource grid-content}">
		<VerticalStackLayout Spacing="10">
			<Button Text="Bluetooth" Command="{Binding BlutoothCommand}" />
			<Button Text="Camera" Command="{Binding CameraCommand}" />
			<Button Text="LocationAlways" Command="{Binding LocationAlwaysCommand}" />
			<Button Text="LocationWhenInUse" Command="{Binding LocationWhenInUseCommand}" />
			<Button Text="StorageReadWrite" Command="{Binding StorageReadWriteCommand}" />
		</VerticalStackLayout>
	</Grid>
	
</page:BasePage>